[Unit]
Description=XMRig Mining Service
After=network.target

[Service]
Type=simple
Restart=always
RestartSec=5s
User=miner
Group=miner
LimitNOFILE=65535
ExecStart=/usr/local/bin/xmrig -c /etc/xmrig/config.json
StandardOutput=journal
StandardError=journal
SyslogIdentifier=xmrig

[Install]
WantedBy=multi-user.target
